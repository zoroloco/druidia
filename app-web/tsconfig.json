{
    "compileOnSave" : false,

    "compilerOptions": {
        "noImplicitAny"                  : false,
        "target"                         : "es5",
        "removeComments"                 : true,
        "module"                         : "commonjs",
        "moduleResolution"               : "node",
        "sourceMap"                      : true,
        "emitDecoratorMetadata"          : true,
        "experimentalDecorators"         : true,
        "lib"                            : [ "es2015", "dom" ],
        "suppressImplicitAnyIndexErrors" : true,
        "outDir"                         : "dist"
    },

    "include" : [
        "app/src/**/*"
    ],

    "types": [
      "underscore",
      "jasmine",
      "node"
    ]
}
