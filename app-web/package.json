{
  "name": "druidia.net",
  "version": "0.0.30",
  "description": "druidia.net Angular 2 web application.",
  "scripts": {
    "create": "mkdir dist",
    "clean": "rimraf dist/ && npm run create",
    "resources": "copyfiles -f app/resources/* dist/resources",
    "html": "copyfiles -f app/src/**/*.html dist/html && copyfiles -f app/src/index.html dist/",
    "compile": "tsc",
    "bundle": "browserify -s main dist/main.js > dist/bundle.js",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js",
    "build": "npm run resources && npm run html && npm run compile && npm run bundle",
    "deploy": "npm run build && npm run minify",
    "test": "karma start"
  },
  "keywords": [
    "druidia.net"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoroloco/druidia.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zoroloco/druidia.git/issues",
    "email": "kcenturion@yahoo.com"
  },
  "author": {
    "name": "Kenneth Centurion"
  },
  "dependencies": {
    "@angular/animations": "^4.2.3",
    "@angular/common": "latest",
    "@angular/compiler": "latest",
    "@angular/compiler-cli": "latest",
    "@angular/core": "latest",
    "@angular/forms": "latest",
    "@angular/http": "latest",
    "@angular/material": "latest",
    "@angular/platform-browser": "latest",
    "@angular/platform-browser-dynamic": "latest",
    "@angular/router": "latest",
    "angular2-froala-wysiwyg": "^2.6.0",
    "angular2-jwt": "^0.2.3",
    "auth0-lock": "^10.15.1",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.1.1",
    "systemjs": "0.19.40",
    "underscore": "^1.8.3",
    "zone.js": "^0.8.4"
  },
  "engines": {
    "node": "^6.9.2"
  },
  "devDependencies": {
    "@types/jasmine": "^2.5.52",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.3",
    "bower": "^1.7.7",
    "browserify": "^13.3.0",
    "intl": "^1.2.5",
    "jasmine": "^2.6.0",
    "jasmine-core": "^2.6.4",
    "karma": "^0.13.22",
    "karma-browserify": "^5.1.1",
    "karma-chrome-launcher": "^0.2.3",
    "karma-jasmine": "^1.1.0",
    "karma-typescript": "^3.0.4",
    "karma-typescript-angular2-transform": "^1.0.0",
    "karma-webpack": "^2.0.3",
    "minify": "^2.0.13",
    "run-sequence": "^1.2.2",
    "tsify": "^2.0.8",
    "typescript": "~2.2.2",
    "uglify": "^0.1.5",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "watchify": "^3.9.0",
    "webpack": "^2.6.1"
  }
}
