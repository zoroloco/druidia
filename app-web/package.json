{
  "name": "druidia.net",
  "version": "0.0.30",
  "description": "druidia.net Angular 2 web application.",
  "scripts": {
    "create": "mkdir dist",
    "clean": "rimraf dist/ && npm run create",
    "resources": "copyfiles -f app/resources/* dist/resources",
    "html": "copyfiles -f 'app/src/**/*.html' dist/html && copyfiles -f app/src/index.html dist/",
    "compile": "tsc",
    "bundle": "browserify -s main dist/main.js > dist/bundle.js",
    "minify": "uglifyjs dist/bundle.js --screw-ie8 --compress --mangle --output dist/bundle.min.js",
    "build": "npm run resources && npm run html && npm run compile && npm run bundle",
    "deploy": "npm run build && npm run minify"
  },
  "keywords": [
    "druidia.net"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoroloco/druidia.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zoroloco/druidia.git/issues",
    "email": "kcenturion@yahoo.com"
  },
  "author": {
    "name": "Kenneth Centurion"
  },
  "dependencies": {
    "@angular/common": "4.0.0",
    "@angular/compiler": "4.0.0",
    "@angular/compiler-cli": "4.0.0",
    "@angular/core": "4.0.0",
    "@angular/forms": "4.0.0",
    "@angular/http": "4.0.0",
    "@angular/material": "^2.0.0-beta.6",
    "@angular/platform-browser": "4.0.0",
    "@angular/platform-browser-dynamic": "4.0.0",
    "@angular/router": "4.0.0",
    "angular2-froala-wysiwyg": "^2.6.0",
    "angular2-jwt": "^0.2.3",
    "auth0-lock": "^10.15.1",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.8",
    "rxjs": "5.1.1",
    "systemjs": "0.19.40",
    "underscore": "^1.8.3",
    "zone.js": "^0.8.4"
  },
  "engines": {
    "node": "^6.9.2"
  },
  "devDependencies": {
    "browserify": "^13.3.0",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "run-sequence": "^1.2.2",
    "typescript": "~2.2.2",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^1.1.0",
    "bower": "^1.7.7",
    "tsify": "^2.0.8",
    "minify": "^2.0.13",
    "uglify": "^0.1.5",
    "watchify": "^3.9.0"
  }
}
